@model IEnumerable<NitStore.Models.Domain.User>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>View All User</title>
  </head>
  <body>
    <div>
      <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <span class="navbar-brand mb-0 h1">NIT Admin</span>
          <nav class="nav">
            <a class="nav-link" href="#">Manage User</a>
          </nav>
        </div>
      </nav>
    </div>
    <div class="d-flex container-fluid justify-content-center">
      <div class="w-75 mt-5">
        <button type="button" class="btn btn-success" href="User/Add">Add New User</button>
            @{
                int index = 1;
            }
            @if (Model != null)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">User Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Status</th>
                            <th scope="col">NeedToChange</th
                                <th scope="col">Role</th>
                            <th class="justify-content-center text-center" scope="col">
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                {
                        <tr>
                            <th scope="row">@index</th>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>@item.IsActive</td>
                            <td>@item.NeedToChange</td>
                            <td>@item.Role</td>
                            <td class="justify-content-center text-center">
                                <button type="button" class="btn btn-danger">Remove</button>
                                <button type="button" class="btn btn-warning">Edit</button>
                            </td>
                        </tr>
                }
                        
                        
                    </tbody>
                </table>
                
            }
        
      </div>
    </div>
    <footer
      style="position: fixed; bottom: 0; width: 100%"
      class="align-items-end bg-dark text-center text-white"
    >
      <div class="container p-4">
        <section class="">
          <form action="">
            <div class="row d-flex justify-content-center"></div>
          </form>
        </section>
        <section class="mb-4">
          <p>
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Sunt
            distinctio earum repellat quaerat voluptatibus placeat nam, commodi
            optio pariatur est quia magnam eum harum corrupti dicta, aliquam
            sequi voluptate quas.
          </p>
        </section>
      </div>

      <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
        © 2020 Copyright:
        <a class="text-white" href="https://mdbootstrap.com/"
          >MDBootstrap.com</a
        >
      </div>
    </footer>
  </body>
</html>
