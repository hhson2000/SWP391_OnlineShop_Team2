        <div class="container-fluid w-100 m-3 justify-content-center text-center">
            <div class="container mt-3">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <label for="category"
                               class="form-label"
                               style="
                              text-decoration: none;
                              font-size: large;
                              color: black;
                              font-weight: bold;
                            ">Category</label>
                        <select class="form-select" id="category" aria-label="Category">
                            <option selected>All</option>
                            @if (ViewBag.CategoryList != null)
                            {
                                @foreach (var item in ViewBag.CategoryList)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
    </header>
    @RenderBody()

    <footer style="bottom: 0; width: 100%"
            class="align-items-end bg-dark text-center text-white">
        <div class="container p-4">
            <section class="">
                <form action="">
                    <div class="row d-flex justify-content-center"></div>
                </form>
            </section>
            <section class="mb-4">
                <p>
                    NIT Laptop đơn vị cung câp thiết bị laptop văn phòng hàng đầu khu
                    vực Đông Nam Á
                </p>
            </section>
        </div>

        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
            © 2020 Copyright:
            <a class="text-white" href="https://mdbootstrap.com/">MDBootstrap.com</a>
        </div>
    </footer>
</body>
</html>
